record(bo, "FBCK:$(AREA):$(LOOP):FORCEDATA"){
    field(DESC, "Toggle forced known state data to FCOM")
    field(DTYP, "FfConfig")
    field(OUT,  "@$(LOOP) FORCEDATA")
    field(PINI, "YES")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL,  "$(FDVAL)")
    field(ZSV,  "NO_ALARM")
    field(OSV,  "NO_ALARM")
}

record(ao, "FBCK:$(AREA):$(LOOP):FORCEDSTATEVALUE"){
    field(DESC, "Forced value to be written to states channel")
    field(DTYP, "FfConfig")
    field(OUT,  "@$(LOOP) FORCEDSTATE")
    field(PINI, "YES")
    field(VAL,  "0.0")
}

record(ao, "FBCK:$(AREA):$(LOOP):FORCEDACTUATORVALUE"){
    field(DESC, "Forced value to be written to actuator channel")
    field(DTYP, "FfConfig")
    field(OUT,  "@$(LOOP) FORCEDACTUATOR")
    field(PINI, "YES")
    field(VAL,  "0.0")
}
